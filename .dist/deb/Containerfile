FROM ubuntu:jammy
ARG DEBIAN_FRONTEND=noninteractive

COPY .dist/.build.filesystem /

RUN apt-get update
RUN apt-get -y install software-properties-common build-essential
RUN add-apt-repository -n ppa:longsleep/golang-backports
RUN apt-get update
RUN apt-get -y install podman rsync vim dput devscripts dh-make dput git uidmap dbus-user-session
RUN apt-get -y install golang-1.22
RUN apt-get -y install pinentry-tty
RUN which pinentry-tty
RUN podman --version
RUN usermod --add-subuids 200000-265536 --add-subgids 200000-265536 root
