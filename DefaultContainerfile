FROM ubuntu:oracular

ARG GOBIN="/usr/bin"
ARG GOMODCACHE="/tmp/gomod"
ARG GOCACHE="/tmp/gocache"

RUN echo "cache buster 059a9a06-1686-4f49-9a7f-a30535886d59"
# put apt in non-interactive mode
ENV DEBIAN_FRONTEND=noninteractive

RUN apt update

# general utilities
RUN apt-get install -y software-properties-common build-essential ca-certificates curl sudo
RUN add-apt-repository -n ppa:longsleep/golang-backports
RUN add-apt-repository -n ppa:egdaemon/eg
RUN add-apt-repository -n ppa:egdaemon/duckdb
RUN apt update

RUN apt-get install -y --no-install-recommends curl gnupg2 lsb-release iproute2 git apt-file pinentry-tty uidmap dbus-user-session
RUN apt-get install -y --no-install-recommends ssh podman netavark rsync vim golang-1.23 eg tree fuse-overlayfs

# properly link golang into the path.
RUN ln -s /usr/lib/go-1.23/bin/go /usr/local/bin/go

# preload some well known hosts
RUN ssh-keyscan -H github.com >> /etc/ssh/ssh_known_hosts
RUN ssh-keyscan -H gitlab.com >> /etc/ssh/ssh_known_hosts

RUN systemd-sysusers
RUN systemd-tmpfiles --create

RUN printf '%%wheel ALL=(ALL:ALL) NOPASSWD: ALL\n' | tee -a /etc/sudoers.d/egd

RUN echo "cache buster bd9d449e-cbf2-4859-84df-38ee615b3cc2"
RUN ls -lha /
